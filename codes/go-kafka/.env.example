# 25. 创建 .env.example 配置文件
env_example = '''# Kafka 连接配置
# Kafka 集群地址，多个用逗号分隔
KAFKA_BROKERS=localhost:9092

# 默认 Topic
KAFKA_TOPIC=default-topic

# 消费者组 ID
KAFKA_GROUP_ID=my-consumer-group

# SASL 认证（可选）
# KAFKA_SASL_USERNAME=admin
# KAFKA_SASL_PASSWORD=secret

# TLS 配置（可选）
# KAFKA_TLS_ENABLED=true
# KAFKA_TLS_CERT_FILE=/path/to/cert.pem
# KAFKA_TLS_KEY_FILE=/path/to/key.pem
# KAFKA_TLS_CA_FILE=/path/to/ca.pem

# 生产者配置
KAFKA_PRODUCER_BATCH_SIZE=100
KAFKA_PRODUCER_BATCH_TIMEOUT=100ms
KAFKA_PRODUCER_COMPRESSION=lz4

# 消费者配置
KAFKA_CONSUMER_MAX_BYTES=10MB
KAFKA_CONSUMER_SESSION_TIMEOUT=30s
KAFKA_CONSUMER_HEARTBEAT_INTERVAL=3s

# 应用配置
LOG_LEVEL=info
METRICS_ENABLED=true